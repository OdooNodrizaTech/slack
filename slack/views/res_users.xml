<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_users_form_slack_oniad" model="ir.ui.view">
        <field name="name">view_users_form_slack_oniad</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button string="Probar Slack" type="object" name="action_test_slack" attrs="{'invisible': [('slack_member_id', '=', False)]}"/>
            </xpath>
            <field name="notify_email" position="before">	    	
                <field name="slack_member_id"/>
                <field name="slack_mail_message"/>                
	       </field>                       
        </field>
    </record>    
</odoo>